{
  "manifest_version": 2,
  "name": "Arc Shield",
  "version": "1.0",

  "description": "Developing a web browser lock extension that secures your browsing by locking the browser and protecting your personal information from unauthorized access.",

  "icons": {
    "48": "icons/Arcnet_Shield.webp"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["arc.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "storage", "webNavigation"]
}
