{
  "manifest_version": 2,
  "name": "Arc Shield",
  "version": "1.0",

  "description": "Developing a web browser lock extension that secures your browsing by locking the browser and protecting your personal information from unauthorized access.",

  "icons": {
    "96": "icons/Arcnet_Shield.webp"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lock.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      }
    }
  },
  "permissions": ["tabs", "storage", "webNavigation", "window", "contextMenus"]
}
